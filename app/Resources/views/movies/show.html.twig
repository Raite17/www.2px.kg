{% extends 'base.html.twig' %}

{% block body %}
    <h1>Movie</h1>
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td><img  src="{{ asset('assets/img/uploads/'~ movie.poster) }}"></td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ movie.genre }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ movie.country }}</td>
            </tr>
            <tr>
                <th>Premier</th>
                <td>{% if movie.premier %}{{ movie.premier|date('d-m-Y ') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Actors</th>
                <td>{{ movie.actors }}</td>
            </tr>
            <tr>
                <th>Director</th>
                <td>{{ movie.director }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ movie.description }}</td>
            </tr>
            <tr>
                <th>Trailer</th>
                <td>{{ movie.trailer }}</td>
            </tr>
            <tr>
                <th>Screenshots</th>
                <td><img  src="{{ asset('assets/img/uploads'~ movie.screenshots) }}"></td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if movie.createdAt %}{{ movie.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('movies_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('movies_edit', { 'id': movie.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
